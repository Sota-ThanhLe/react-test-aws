{
  "name": "chainprotocol-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16 <17"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.1.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.1.0",
    "react-scripts": "^5.0.1",
    "react-tradingview-widget": "^1.3.2",
    "react-ts-tradingview-widgets": "^1.0.10",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0",
    "web3": "^1.7.3"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build-stg": "react-app-rewired build",
    "build": "GENERATE_SOURCEMAP=false react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "lint": "eslint src/**/*.{ts,tsx} --color --max-warnings=0",
    "format": "prettier --write .",
    "re-install": "rm -rf node_modules/ && rm -rf yarn.lock && yarn",
    "deploy": "yarn run build-stg && serve -s build -l 10002",
    "prepare": "husky install"
  },
  "optionalDependencies": {
    "node-fetch": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint"
    ],
    "./src/**": [
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "assert": "^2.0.0",
    "autoprefixer": "^10.4.5",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "https-browserify": "^1.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "os-browserify": "^0.3.0",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwindcss": "^3.0.24",
    "url": "^0.11.0"
  }
}
